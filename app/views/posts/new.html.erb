<div class="container mt-5 ">
  <h2>Create a post</h2>
  <%= form_for([@user, @post]) do |form| %>
    <div class="row mb-3">
      <%= form.label :post_title, for: "title", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= form.label :content, for: "text", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_area :text, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= form.submit "Create post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>